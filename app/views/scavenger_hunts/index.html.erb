<%- model_class = ScavengerHunt -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @scavenger_hunts.each do |scavenger_hunt| %>
      <tr>
        <td><%= link_to scavenger_hunt.id, scavenger_hunt_path(scavenger_hunt) %></td>
        <td><%= scavenger_hunt.name %></td>
        <td><%= scavenger_hunt.start_date %></td>
        <td><%= scavenger_hunt.end_date %></td>
        <td><%=l scavenger_hunt.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_scavenger_hunt_path(scavenger_hunt), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      scavenger_hunt_path(scavenger_hunt),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_scavenger_hunt_path,
            :class => 'btn btn-primary' %>
